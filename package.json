{
  "name": "@viewsonic-mvb/uservice-monorepo-cli",
  "version": "1.20.0",
  "description": "The monorepo cli tools.",
  "bin": {
    "uservice": "dist/bin/uservice.js"
  },
  "scripts": {
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/**/*.hbs ./dist/",
    "watch": "tsc -w",
    "build": "yarn clean && tsc && yarn copy-files",
    "prepack": "yarn clean && tsc && yarn copy-files",
    "start": "node dist/bin/uservice.js",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepare": "husky install"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "author": "Richy Yang <w4567892015@gmail.com>",
  "contributors": [
    {
      "name": "Duye Chen",
      "email": "k078264@gmail.com",
      "url": "http://duye.single9.net"
    }
  ],
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/w4567892015/uservice-monorepo-cli"
  },
  "bugs": {
    "url": "https://github.com/w4567892015/uservice-monorepo-cli/issues"
  },
  "homepage": "https://github.com/w4567892015/uservice-monorepo-cli#readme",
  "dependencies": {
    "@commitlint/config-conventional": "^17.6.1",
    "@commitlint/lint": "^17.6.1",
    "@commitlint/load": "^17.5.0",
    "axios": "^1.3.5",
    "chalk": "^4.1.2",
    "commander": "^10.0.0",
    "fs-extra": "^11.1.1",
    "handlebars": "^4.7.7",
    "ini": "^4.0.0",
    "inquirer": "^8.2.5",
    "node-emoji": "^1.11.0",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@types/fs-extra": "^11.0.1",
    "@types/ini": "^1.3.31",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.2",
    "@types/node-emoji": "^1.8.2",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.35.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.4.3",
    "jest-junit": "^15.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "lines": 80
      }
    },
    "testEnvironment": "node"
  }
}
